# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{*.{yaml,yml,sh,jscsrc,md},package.json,.*rc}]
indent_size = 2

# All kind of JS files
[*.{js,jsx,mjs,mjsx,ts,tsx,mts,mtsx}]
max_line_length = 120

[*.json]
max_line_length = 1000

[Makefile]
indent_style = tab
